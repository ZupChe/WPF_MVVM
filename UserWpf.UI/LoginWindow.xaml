<Window x:Class="UserWpf.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserWpf.UI"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="400">
    <Grid>
        <TextBox Text="{Binding UserName}" Name="UserName" HorizontalAlignment="Left" Height="23" Margin="143,119,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <PasswordBox  Name="UserPass" HorizontalAlignment="Left" Height="23" Margin="143,166,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="UserName" HorizontalAlignment="Left" Margin="77,119,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.084,1.425"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="77,162,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.084,1.425"/>
        <Button Command="{Binding LoginCommand}" Content="Login" HorizontalAlignment="Left" Margin="143,254,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
